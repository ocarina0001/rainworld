<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <ThingDef ParentName="EggFertBase">
        <defName>OCARINA_EggGreenLizardFertilized</defName>
        <label>green lizard egg (fert.)</label>
        <description>A fertilized green lizard egg. If all goes well, it should hatch into a green lizard. It can be eaten raw, but it's much better cooked.</description>
        <graphicData>
            <texPath>Things/Item/Resource/AnimalProductRaw/EggOval</texPath>
            <drawSize>1</drawSize>
            <color>(235,235,235)</color>
        </graphicData>
        <statBases>
            <MarketValue>25.0</MarketValue>
        </statBases>
        <comps>
            <li Class="CompProperties_Hatcher">
                <hatcherDaystoHatch>5</hatcherDaystoHatch>
                <hatcherPawn>OCARINA_GreenLizard</hatcherPawn>
            </li>
        </comps>
    </ThingDef>

